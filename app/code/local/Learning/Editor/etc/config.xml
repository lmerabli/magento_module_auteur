<?xml version="1.0"?>
<config>
  <modules>
    <Learning_Editor>
      <version>0.2.0</version>
    </Learning_Editor>
  </modules>
  <global>
    <helpers>
      <learning_editor>
        <class>Learning_Editor_Helper</class>
      </learning_editor>
    </helpers>
    <blocks>
      <learning_editor>
        <class>Learning_Editor_Block</class>
      </learning_editor>
    </blocks>
    <models>
      <learning_editor>
        <class>Learning_Editor_Model</class>
        <resourceModel>learning_editor_resource</resourceModel>
      </learning_editor>
      <learning_editor_resource>
        <class>Learning_Editor_Model_Resource</class>
        <entities>
          <editor>
            <table>learning_editor_editor</table>
          </editor>
          <editor_product>
            <table>learning_editor_editor_product</table>
          </editor_product>
        </entities>
      </learning_editor_resource>
    </models>
    <resources>
      <learning_editor_setup>
        <setup>
          <module>Learning_Editor</module>
        </setup>
        <connection>
          <use>core_setup</use>
        </connection>
      </learning_editor_setup>
      <learning_editor_write>
        <connection>
          <use>core_write</use>
        </connection>
      </learning_editor_write>
      <learning_editor_read>
        <connection>
          <use>core_read</use>
        </connection>
      </learning_editor_read>
    </resources>
  </global>
  <frontend>
    <routers>
      <learning_editor>
        <use>standard</use>
        <args>
          <module>Learning_Editor</module>
          <frontName>editor</frontName>
        </args>
      </learning_editor>
    </routers>
    <layout>
      <updates>
        <learning_editor>
          <file>learning/editor.xml</file>
        </learning_editor>
      </updates>
    </layout>
  </frontend>
  <admin>
    <routers>
      <adminhtml>
        <args>
          <modules>
            <Learning_Editor_Adminhtml before="Mage_Adminhtml">Learning_Editor_Adminhtml</Learning_Editor_Adminhtml>
          </modules>
        </args>
      </adminhtml>
    </routers>
  </admin>
  <adminhtml>
    <translate>
      <modules>
        <learning_editor>
          <files>
            <default>Learning_Editor.csv</default>
          </files>
        </learning_editor>
      </modules>
    </translate>
    <layout>
      <updates>
        <learning_editor>
          <file>learning_editor/learning_editor.xml</file>
        </learning_editor>
      </updates>
    </layout>
  </adminhtml>
</config>
